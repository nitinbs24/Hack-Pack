// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String    @unique
  password  String
  products  Product[]
  cart      CartItem[]
  orders    Order[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  category    String
  imageUrl    String
  createdAt   DateTime @default(now())
  seller      User     @relation(fields: [sellerId], references: [id])
  sellerId    Int
  cartItems   CartItem[]
  orderItems  OrderItem[]
}

// ---- MISSING MODELS START HERE ----

model CartItem {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int     @default(1)

  @@unique([userId, productId]) // A user can only have a specific product once in their cart
}

model Order {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime  @default(now())
  totalAmount Float
  items       OrderItem[]
}

model OrderItem {
  id              Int     @id @default(autoincrement())
  order           Order   @relation(fields: [orderId], references: [id])
  orderId         Int
  product         Product @relation(fields: [productId], references: [id])
  productId       Int
  quantity        Int
  priceAtPurchase Float // Price of the product at the time of purchase
}

// ---- MISSING MODELS END HERE ----